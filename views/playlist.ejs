<%- include("header", {title: "Playlist" })%>
<nav>
    <div class="pages">
        <button onclick="location.href='/playlists';">Playlists</button>
        <button onclick="location.href='/artists';">Artists</button>
    </div>
    <button onclick="location.href='/logout'">Logout</button>
</nav>
<div class="songs">
    <div class="label">
        <h1><%= playlist.name %></h1>
        <h1><%= playlist.date %></h1>
    </div>
    <table>
        <tr>
            <th>Song name</th>
            <th>Artist</th>
            <th>Genre</th>
            <th colspan="2">Actions</th>
        </tr>
        <tbody id="playlist_table">
            <% songs.forEach(song => { %>
                <tr>
                    <td><%= song.name; %></td>
                    <td><%= song.artist; %></td>
                    <td><%= song.genre; %></td>
                    <td><a href="/edit/song/<%= song._id %>/playlist/<%= playlist._id %>">Edit</a></td>
                    <td><a href="/delete/song/<%= song._id %>/playlist/<%= playlist._id %>">Delete</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button onclick="location.href='/new/song/playlist/<%= playlist._id %>'" class="new">
        New
    </button>
</div>
<%- include("footer")%>
